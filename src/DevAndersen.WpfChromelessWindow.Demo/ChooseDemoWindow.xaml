<Window x:Class="DevAndersen.WpfChromelessWindow.Demo.ChooseAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevAndersen.WpfChromelessWindow.Demo"
        mc:Ignorable="d"
        Title="Choose a demo" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <UniformGrid Columns="1">
        <Button Name="BtnMinimalist" Click="BtnMinimalist_Click">Show me a minimalist example</Button>
        <Button Name="BtnDecorated" Click="BtnDecorated_Click">Show me a decorated example</Button>
    </UniformGrid>
</Window>
